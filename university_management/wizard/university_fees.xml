<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_university_fees_wizard_form" model="ir.ui.view">
        <field name="name">university.fees.wizard.form</field>
        <field name="model">university.fees.wizard</field>
        <field name="arch" type="xml">
            <form string="Fees Wizard">
                <group>
                    <field name="fee_amount" readonly="1"/>
                </group>
                <footer>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                    <button name="cancel_fee_payment" string="Cancel Payment" type="object" class="btn-primary"/>
                    <button name="confirm_fee_payment" string="Pay Fees" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
