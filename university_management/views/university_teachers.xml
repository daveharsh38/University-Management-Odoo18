<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_university_teachers" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">university.teachers</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- List View -->
    <record id="view_university_teachers_list" model="ir.ui.view">
        <field name="name">university.teachers.list</field>
        <field name="model">university.teachers</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="joining_date"/>
                <field name="state"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_university_teachers_form" model="ir.ui.view">
        <field name="name">university.teachers.form</field>
        <field name="model">university.teachers</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,on_leave,resigned"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Teacher Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="joining_date"/>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="qualification"/>
                            <field name="experience_years"/>
                        </group>
                    </group>

                    <group>
                        <field name="address"/>
                        <field name="image" widget="image"/>
                    </group>

                    <notebook>
                        <page string="Subjects">
                            <group>
                                <field name="subject_ids" widget="many2many_tags"/>
                            </group>
                        </page>

                        <page string="Students">
                            <field name="student_ids">
                                <list>
                                    <field name="roll_number"/>
                                    <field name="name"/>
                                    <field name="batch"/>
                                    <field name="phone_no"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- chatter -->
                <chatter/>
            </form>
        </field>
    </record>

</odoo>
