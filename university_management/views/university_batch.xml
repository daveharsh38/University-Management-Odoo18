<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ========== LIST VIEW ========== -->
    <record id="view_university_batch_list_view" model="ir.ui.view">
        <field name="name">university.batch.list</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>
    <!-- ========== FORM VIEW ========== -->
    <record id="view_university_batch_form_view" model="ir.ui.view">
        <field name="name">university.batch.list</field>
        <field name="model">university.batch</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Window action -->
    <record id="action_university_batch" model="ir.actions.act_window">
        <field name="name">Batch</field>
        <field name="res_model">university.batch</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>Create Your Student</p>
        </field>
    </record>
</odoo>