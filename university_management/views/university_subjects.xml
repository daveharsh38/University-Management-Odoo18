<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_university_subjects" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">university.subject</field>
        <field name="view_mode">list,form,calendar</field>
    </record>

    <!-- List View -->
    <record id="view_university_subject_list" model="ir.ui.view">
        <field name="name">university.subject.list</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code" readonly="1"/>
                <field name="credit"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_university_subject_form" model="ir.ui.view">
        <field name="name">university.subject.form</field>
        <field name="model">university.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code" readonly="1"/>
                            <field name="credit"/>
                            <field name="active"/>
                        </group>

                        <group>
                            <field name="teacher_ids" widget="many2many_tags"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="start_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="student_view_calendar" model="ir.ui.view">
       <field name="name">university.subject.view.calendar</field>
       <field name="model">university.subject</field>
       <field name="arch" type="xml">
           <calendar 
                date_stop="end_date"
                date_start="start_date"
                string="Student Events"
                event_open_popup="true"
                quick_create="0"
                mode="month"
           >
               <field name="name"  avatar_field="avatar_128"/>
               <field name="code"/>
           </calendar>
       </field>
    </record>

</odoo>
